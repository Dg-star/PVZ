<UserControl x:Class="_2task.view.PVZ"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2task.view"
      mc:Ignorable="d">

    <Grid>
        <DataGrid ItemsSource="{Binding PVZS}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер пункта выдачи" Binding="{Binding Point_Id}" Width="300" IsReadOnly="True" />
                <DataGridTextColumn Header="Адрес" Binding="{Binding Pickup_Points_Location}" Width="400" IsReadOnly="True" />
                <DataGridTextColumn Header="Рабочие часы" Binding="{Binding Working_Hours}" Width="600" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
