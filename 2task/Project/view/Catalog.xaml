<UserControl x:Class="_2task.view.Catalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2task.view"
        mc:Ignorable="d"
        Height="800" Width="1600">

    <Grid>
        <DataGrid ItemsSource="{Binding Products}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер товара" Binding="{Binding Product_Id}" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Header="Продавец" Binding="{Binding Seller_Name}" Width="400" IsReadOnly="True" />
                <DataGridTextColumn Header="Название товара" Binding="{Binding Product_Name}" Width="600" IsReadOnly="True" />
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="200" IsReadOnly="True" />
                <DataGridTextColumn Header="Категория товара" Binding="{Binding Category_Name}" Width="200" IsReadOnly="True" />
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100" IsReadOnly="False" />
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
